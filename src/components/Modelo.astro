<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<style>
	.table-wrapper {
		max-width: 100%;
		overflow-x: auto;
	}

	table {
		width: 100%;
		border-collapse: collapse;
	}

	th,
	td {
		padding: 10px;
		text-align: left;
		border-bottom: 1px solid #441717;
	}

	tr.highlighted {
		background-color: rgba(247, 37, 133, 0.05);
	}

	tr:hover {
		cursor: pointer;
	}
</style>

<div class="container">
	<header>
		<div class="header-title">
			<h1>Listado de Modelos</h1>
			<p>Catálogo de modelos para diferentes tipos de pautas</p>
		</div>
		<div class="header-actions">
			<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarModeloModal">Agregar Modelo</button>
		</div>
	</header>

	<div class="summary-cards">
		<div class="card">
			<div class="card-icon">
				<i class="fas fa-user-friends"></i>
			</div>
			<div class="card-title">Total de Modelos</div>
			<div class="card-value">--</div>
			<div class="card-trend">
				<i class="fas fa-arrow-up"></i> Rango de tallas variado
			</div>
		</div>
		<div class="card">
			<div class="card-icon">
				<i class="fas fa-tshirt"></i>
			</div>
			<div class="card-title">Tallas más Comunes</div>
			<div class="card-value">--</div>
			<div class="card-trend">
				<i class="fas fa-info-circle"></i> Camisa y Pantalón
			</div>
		</div>
		<div class="card">
			<div class="card-icon">
				<i class="fas fa-shoe-prints"></i>
			</div>
			<div class="card-title">Rango de Zapatos</div>
			<div class="card-value">--</div>
			<div class="card-trend">
				<i class="fas fa-chart-pie"></i> Diversidad de calzado
			</div>
		</div>
		<div class="card">
			<div class="card-icon">
				<i class="fas fa-star"></i>
			</div>
			<div class="card-title">Pauta mas Común</div>
			<div class="card-value">--</div>
			<div class="card-trend">
				<i class="fas fa-glass-cheers"></i> Estilo elegante
			</div>
		</div>
	</div>

	<div id="tabla-loader" style="text-align: center; padding: 20px;">
		<i class="fas fa-spinner fa-spin" style="font-size: 24px;"></i> Cargando datos...
	</div>

	<div class="table-wrapper">
		<table class="table">
			<thead>
				<tr id="data-model-id">
					<th>N°</th>
					<th>Nombre y Apellido</th>
					<th>Camisa / Franela</th>
					<th>Pantalón</th>
					<th>Vestidos - Traje</th>
					<th>Zapatos</th>
					<th>N° Outfits</th>
				</tr>
			</thead>
			<tbody id="tablaModelos"></tbody>
		</table>
	</div>

	<div class="modal fade" id="agregarModeloModal" tabindex="-1" aria-labelledby="agregarModeloModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content" style="border-radius: 0.5rem; overflow: hidden; border: none; box-shadow: 0 5px 20px rgba(0,0,0,0.15)">
				<div class="modal-header" style="background-color: #4361ee; color: white; padding: 1.2rem 1.5rem; border-bottom: none">
					<h5 class="modal-title" style="font-weight: 600; font-size: 1.25rem">
						<i class="fas fa-user-plus me-2"></i>Agregar Nuevo Modelo
					</h5>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>

				<div class="modal-body" style="padding: 1.5rem">
					<form id="formAgregarModelo">
						<div class="mb-4">
							<label for="nombreApellido" class="form-label" style="font-weight: 500; color: #333; margin-bottom: 0.5rem">Nombres</label>
							<input
								type="text"
								class="form-control"
								id="nombres"
								required
								placeholder="Ej: Jeremy"
								style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da; transition: all 0.3s"
							/>
						</div>
						<div class="mb-4">
							<label for="Apellido" class="form-label" style="font-weight: 500; color: #333; margin-bottom: 0.5rem">Apellidos</label>
							<input
								type="text"
								class="form-control"
								id="apellidos"
								placeholder="Ej: Benitez"
								required
								style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da; transition: all 0.3s"
							/>
						</div>

						<div class="row g-3 mb-3">
							<div class="col-md-6">
								<label for="camisaFranela" class="form-label" style="font-weight: 500; color: #333">Correo</label>
								<input type="text" class="form-control" id="correo-model" placeholder="publicidad@gmail.com" style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da" />
							</div>

							<div class="col-md-6">
								<label for="pantalon" class="form-label" style="font-weight: 500; color: #333">Numero de telefono</label>
								<input type="text" class="form-control" id="numero_tlf" placeholder="0424-1234567" style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da" />
							</div>

							<div class="mb-4">
								<label for="fotoPerfil" class="form-label" style="font-weight: 500; color: #333; margin-bottom: 0.5rem">Foto de perfil</label>
								<input class="form-control" type="file" id="foto_de_Perfil" accept="image/*" style="padding: 0.3rem 0.75rem; border-radius: 0.375rem; border: 1px solid #ced4da" />
							</div>
							<div class="col-md-6">
								<label for="vestidoTraje" class="form-label" style="font-weight: 500; color: #333">Edad</label>
								<input type="text" class="form-control" id="edad-model" placeholder="23" style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da" />
							</div>

							<div class="col-md-6">
								<label for="vestidoTraje" class="form-label" style="font-weight: 500; color: #333">Cedula</label>
								<input type="text" class="form-control" id="cedula" placeholder="23" style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da" />
							</div>

							<div class="col-md-6">
								<label for="tipo-cuenta" class="form-label" style="font-weight: 500; color: #333">Tipo de cuenta</label>
								<select id="tipo-cuenta" class="form-control" style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da">
									<option value="" disabled selected>Seleccione una opción</option>
									<option value="3"></option>
									<option value="4"></option>
								</select>
							</div>
						</div>
					</form>
				</div>

				<div class="modal-footer" style="border-top: 1px solid #e9ecef; padding: 1rem 1.5rem; background-color: #f8f9fa">
					<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="padding: 0.5rem 1.25rem; border-radius: 0.375rem; border: 1px solid #ced4da">Cancelar</button>
					<button type="button" class="btn btn-primary" id="guardarModelo" style="padding: 0.5rem 1.25rem; border-radius: 0.375rem; background-color: #4361ee; border: none">
						Guardar y avanzar
					</button>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="agregarOutfitModal" tabindex="-1" aria-labelledby="agregarOutfitModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content" style="border-radius: 0.5rem; overflow: hidden; border: none; box-shadow: 0 5px 20px rgba(0,0,0,0.15)">
				<div class="modal-header" style="background-color: #4361ee; color: white; padding: 1.2rem 1.5rem; border-bottom: none">
					<h5 class="modal-title" id="agregarOutfitModalLabel" style="font-weight: 600; font-size: 1.25rem">
						<i class="fas fa-tshirt me-2"></i>Agregar Outfit del Modelo
					</h5>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>

				<div class="modal-body" style="padding: 1.5rem">
					<form id="formAgregarOutfit">
						<div class="mb-3">
							<label for="camisa" class="form-label" style="font-weight: 500; color: #333">Camisa</label>
							<input type="text" class="form-control" id="camisa" placeholder="Ej: Blanca, talla M" style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da" />
						</div>

						<div class="mb-3">
							<label for="pantalon" class="form-label" style="font-weight: 500; color: #333">Pantalón</label>
							<input type="text" class="form-control" id="pantalonOutfit" placeholder="Ej: Jeans azul" style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da" />
						</div>

						<div class="mb-3">
							<label for="zapatos" class="form-label" style="font-weight: 500; color: #333">Zapatos</label>
							<input type="text" class="form-control" id="zapatos" placeholder="Ej: Deportivos, talla 42" style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da" />
						</div>

						<div class="mb-3">
							<label for="vestimenta" class="form-label" style="font-weight: 500; color: #333">Vestimenta adicional</label>
							<input
								type="text"
								class="form-control"
								id="vestimenta"
								placeholder="Ej: Accesorios, sombrero, etc."
								style="padding: 0.6rem 1rem; border-radius: 0.375rem; border: 1px solid #ced4da"
							/>
						</div>

						<input type="hidden" id="modeloIdOutfit" />
					</form>
				</div>

				<div class="modal-footer" style="border-top: 1px solid #e9ecef; padding: 1rem 1.5rem; background-color: #f8f9fa">
					<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="padding: 0.5rem 1.25rem; border-radius: 0.375rem">Cancelar</button>
					<button type="button" class="btn btn-primary" id="guardarOutfit" style="padding: 0.5rem 1.25rem; border-radius: 0.375rem; background-color: #4361ee; border: none">
						Guardar Outfit
					</button>
				</div>
			</div>
		</div>
	</div>

	<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
		rel="stylesheet"
		integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7"
		crossorigin="anonymous"
	/>

	<script src="/js/modelo.js" defer></script>
</div>
